@model SearchViewModel

@{
    ViewData["Title"] = Model.GetPageTitle();
}

<partial name="_JumboNav" model="Model.GetJumboNavViewModel()" />

<div class="row center-block">
    <form class="form-inline" action="/search" method="post">
        <div class="form-group">
            <i class="fa fa-search" aria-hidden="true"></i>
            <input name="term" id="term" class="form-control form-inline" type="text" placeholder="@Model.GetPlaceholderText()" aria-label="Search">
            <button id="btn-search" type="submit" class="btn btn-default form-control form-inline">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </div>
    </form>

    <p>@Model.GetPageMessage()</p>

    <partial name="_TipsTablePartial" model="Model.GetTipsViewModel()" />
</div>
