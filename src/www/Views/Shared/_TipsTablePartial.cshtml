@model TipsTableViewModel

<div class="table-responsive">
    <table class="table table-striped table-hover">
        @if (Model == null || Model.Tips == null)
        {

        }
        else
        {
            foreach (var tip in Model.Tips)
            {
            <tr>
                <td>@Html.Raw(Markdig.Markdown.ToHtml(tip.Markdown))</td>
                <td>
                    <a href="/tip/@tip.Id">More info</a>
                </td>
            </tr>
            }
        }
    </table>
</div>